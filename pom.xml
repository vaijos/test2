    <modelVersion>4.0.0</modelVersion>

    <artifactId>network-ticketing-system</artifactId>
    <packaging>jar</packaging>
    <name>Network Ticketing System</name>
    <description>Service for Network (NRB) ticket creation</description>
    <version>1.0.0</version>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.6.2</version>
        <!-- version>2.7.3</version -->
    </parent>

    <properties>
        <java.version>17</java.version>
        <checkstyle.config.location>./checkstyle.xml</checkstyle.config.location>
    </properties>

    <repositories>
        <repository>
            <id>gitlab-maven</id>
            <url>https://gitlab.visible.com/api/v4/projects/679/packages/maven</url>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>gitlab-maven</id>
            <url>https://gitlab.visible.com/api/v4/projects/679/packages/maven</url>
        </repository>

        <snapshotRepository>
            <id>gitlab-maven</id>
            <url>https://gitlab.visible.com/api/v4/projects/679/packages/maven</url>
        </snapshotRepository>
    </distributionManagement>

