            <groupId>com.google.cloud</groupId>
            <artifactId>google-cloud-storage</artifactId>
            <version>1.117.0</version>
            <exclusions>
                <exclusion>
                    <groupId>com.google.api</groupId>
                    <artifactId>gax</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <!-- secret manager end-->
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>com.google.cloud.tools</groupId>
                <artifactId>jib-maven-plugin</artifactId>
                <version>2.4.0</version>
            </plugin>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <version>3.1.1</version>
            </plugin>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.8.7</version>
                <configuration>
                    <excludes>
                        <exclude>com/visible/nw/ticketing/constants/**/*</exclude>
                        <exclude>com/visible/nw/ticketing/repository/**/*</exclude>
                        <exclude>com/visible/nw/ticketing/model/**/*</exclude>
                        <exclude>com/visible/nw/ticketing/dto/**/*</exclude>
                        <exclude>com/visible/nw/ticketing/config/**/*</exclude>
                        <exclude>com/visible/nw/ticketing/properties/**/*</exclude>
                        <exclude>com/visible/nw/ticketing/controller/VMBController.class</exclude>
                        <exclude>com/visible/nw/ticketing/controller/TestController.class</exclude>
                        <exclude>com/visible/nw/ticketing/vmb/listener/**/*</exclude>
                        <exclude>com/visible/nw/ticketing/consumer/**/*</exclude>
                        <exclude>com/visible/nw/ticketing/consumer/**/*</exclude>
                        <exclude>com/visible/nw/ticketing/security/filter/**/*</exclude>
                        <exclude>com/visible/nw/ticketing/integration/**/*</exclude>
                        <exclude>com/visible/nw/ticketing/sqltypes/**/*</exclude>
                    </excludes>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>report</id>
                        <phase>test</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
